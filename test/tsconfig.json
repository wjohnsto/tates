{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "node",
        "target": "ES2017",
        "removeComments": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "noUnusedLocals": true,
        "noEmit": true,
    },
    "include": [
        "../src/**/*",
        "**/*"
    ]
}